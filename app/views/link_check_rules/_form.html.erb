<%= custom_form_with model: @link_check_rule, url: do |f| %>
  <%= f.label :source_id %>
  <%= f.grouped_collection_select(:source_id, Partner.all, :sources, :name, :id, :source_id) %>

  <%= f.label :xpath %>
  <%= f.text_field :xpath %>

  <%= f.label :status_codes %>
  <%= f.text_field :status_codes %>

  <%= f.label :throttle %>
  <%= f.number_field :throttle %>

  <%= f.label :active do %>
    <%= f.check_box :active, value: true %> Active
  <% end -%>

  <%= f.submit 'Create Link check rule', class: 'button' %>
<% end %>
