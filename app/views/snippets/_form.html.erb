<%= form_with model: @snippet, local: true do |f| %>
  <% if can? :update, @snippet %>
    <%= f.text_area :content, class: 'code-editor' %>

    <%= f.label :message %>
    <%= f.text_field :message %>

    <%= f.submit class: 'button' %>
  <% else %>
    <%= f.text_area :content, class: 'code-editor read-only' %>
  <% end %>
<% end %>
