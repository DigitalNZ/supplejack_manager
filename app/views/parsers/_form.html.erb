<%= simple_form_for @parser do |f| %>
  <% if can? :update, @parser %>
    <%= f.input :content, as: :text, label: false, input_html: {class: "code-editor read"} %>

    <%= f.input :message %>
    <%= f.button :submit %>
  <% else %>
    <%= f.input :content, as: :text, label: false, input_html: {class: "code-editor read-only"} %>
  <% end %>
<% end %>
