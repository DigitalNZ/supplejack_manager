<h1><%= t('partners.label') %></h1>
<%= link_to t('partners.create'), new_partner_path, class: "button new-right #{can_show_button(:create, Partner)}" %>

<table id="partners">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @partners.each do |partner| %>
    <tr>
      <% if can? :update, Partner %>
        <td><%= link_to partner.name, edit_partner_path(partner) %></td>
      <% else %>
        <td><%= partner.name %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
